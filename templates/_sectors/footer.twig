<footer id="footer" class="s-footer">
	<div class="row row-y-top">

		<div class="column large-8 medium-12">
			<div class="row">
				<div class="column large-7 tab-12 s-footer__block">
					<h4 class="h6">{{ footer.office.type('header').one().caption }}</h4>
					<p>
						{% for block in footer.office.type('address').all() %}
							{% if not loop.last %}
								{{ block.property }}<br>
							{% else %}
								{% set phone = block.property|replace({
										'+': '',
										' ': '-'
									}) %}
								<a href="tel:{{ phone }}">{{ block.property }}</a>
							{% endif %}
						{% endfor %}
					</p>
				</div>

				<div class="column large-5 tab-12 s-footer__block">
					<h4 class="h6">{{ socialNav.menu.type('header').one().caption }}</h4>

					<ul class="s-footer__list">
						{% for block in socialNav.menu.type('item').all() %}
							<li>
								<a href="{{ block.hyperlink }}" title="{{ block.caption }}">{{ block.caption }}</a>
							</li>
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>

		<div class="column large-4 medium-12 s-footer__block--end">
			<a href="mailto:{{ footer.hyperlink }}" class="btn h-full-width">{{ footer.caption }}</a>

			<div class="ss-copyright">
				<span>Copyright Flare 2020</span>
				<span>Design by
					<a href="https://www.styleshout.com/">StyleShout</a>
				</span>
			</div>
		</div>

		<div class="ss-go-top">
			<a class="smoothscroll" title="Back to Top" href="#top">
				top
			</a>
		</div>

	</div>
</footer>
