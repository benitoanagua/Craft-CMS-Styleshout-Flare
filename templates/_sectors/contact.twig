{% import "_utils/filters" as utils %}

<section class="s-contact">
	{% set contact = craft.entries.section('sectors').title('*Touch*').one() %}

	<div class="row narrower s-contact__top h-text-center">
		<div class="column">
			<h3 class="h6">{{ contact.title }}</h3>
			<h1 class="display-1">{{ utils.removeTagP( contact.description ) }}</h1>
		</div>
	</div>

	<div class="row h-text-center">
		<div class="column">
			<p class="s-contact__email">
				<a href="mailto:#0">{{ contact.caption }}</a>
			</p>
		</div>
	</div>

</section>
